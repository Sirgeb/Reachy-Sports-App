{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend of Reachy Sports",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node build/server.js",
    "dev": "env-cmd -f ./src/config/dev.env nodemon --exec babel-node src/server.js",
    "heroku-postbuild": "babel src --out-dir build --copy-files",
    "deploy": "env-cmd -f ./src/config/dev.env prisma deploy",
    "generate": "env-cmd -f ./src/config/dev.env prisma generate"
  },
  "engines": {
    "node": "12.16.2",
    "npm": "6.5.0"
  },
  "dependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.2.2",
    "@babel/node": "7.2.2",
    "@babel/preset-env": "7.3.1",
    "@babel/runtime": "^7.9.2",
    "dotenv": "8.2.0",
    "env-cmd": "10.1.0",
    "graphql-tools": "^4.0.7",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.6",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "prisma-client-lib": "^1.34.10"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.9.6",
    "nodemon": "^2.0.4"
  }
}
